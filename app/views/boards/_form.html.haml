.container
  %ul
    - board.errors.full_messages.each do |message|
      %li= message
  = form_with(model: board, local: true) do |f|
    %div
      = f.label :new_board, 'New Board'
    %div
      = f.label :name, 'name'
    %div
      = f.text_field :name, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    = f.submit '保存', class: 'btn-primary'
